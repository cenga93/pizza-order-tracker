<section class="orders">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <% if(orders.length) { %>
        <table class="table table-striped table-hover mt-3 shadow shadow-sm">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Address</th>
              <th scope="col">Phone</th>
              <th scope="col">Time</th>
            </tr>
          </thead>
          <tbody>
            <% if(orders.length){ %> <% orders.map(({_id, address, phone, createdAt}) => { %>
            <tr>
              <th scope="row" style="width: 30%">
                <a href="/orders/<%= _id %>" class="orders__link"><%= _id %></a>
              </th>

              <td style="width: 20%"><%= address %></td>
              <td style="width: 20%"><%= phone %></td>

              <td style="width: 30%"><%= moment(createdAt).format('MMMM Do YYYY, HH:mm:ss a') %></td>
            </tr>
            <% }) %> <% }else{ %>
            <p>Length je 0</p>
            <% } %>
          </tbody>
        </table>
        <% }else{ %>
        <h4>Not found orders...</h4>
        <% } %>
      </div>
    </div>
  </div>
</section>
